<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>TestPage</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>com.zhku.jsj.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>charset</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
    <filter>
        <filter-name>PrivilegeFilter</filter-name>
        <filter-class>com.zhku.jsj.filter.PrivilegeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PrivilegeFilter</filter-name>
        <url-pattern>/user/*</url-pattern>
        <url-pattern>/shop/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>PjaxPageFilter</filter-name>
        <filter-class>com.zhku.jsj.filter.PjaxPageFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PjaxPageFilter</filter-name>
        <url-pattern>/user/*</url-pattern>
        <url-pattern>/page/*</url-pattern>
        <url-pattern>/shop/*</url-pattern>
    </filter-mapping>
</web-app>